@using MVCShopAdo.Models
@model IEnumerable<GoodView>
@{
    ViewBag.Title = "Goods";
    var options = new AjaxOptions
    {
        UpdateTargetId = "info"
    };
}
<br>
<h2>Goods</h2>

<div id="info">
    @Html.Action("TableGoods")
</div>

<div id="paging" style="text-align:right;">
    @for (int i = 0; i < ViewBag.PageCount; i++)
    {
        @Ajax.ActionLink($"{i + 1}", "Goods", new { id = i + 1 },
        options, new { @class = "btn btn-outline-secondary", @style = "margin-right:5px;"});
    }
</div>